<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:padding="14dp"
                                                   android:id="@+id/course_view"
                                                   android:layout_height="85dp">
    <TextView
            android:id="@+id/course_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"/>
    <TextView
            android:id="@+id/course_marks"
            android:layout_width="40dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/course_code" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>
    <TextView
            android:id="@+id/course_term"
            android:layout_width="40dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/course_marks" android:layout_marginStart="10dp"
            tools:layout_editor_absoluteY="3dp"
            android:textAlignment="center"/>
    <TextView
            android:id="@+id/course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/draw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/delete_button"
            app:layout_constraintVertical_bias="0.488" android:layout_marginEnd="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>